<html t:type="layoutLavlah" title=""
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<div class="col-md-9">
		<div class="card-box">
			<h4 class="text-dark header-title m-t-0">${message:lavlahtrend}</h4>
			<t:Form>
				<t:Alerts />
				<t:TextField t:id="companyTrend" t:value="name" style="width:50%;"
					t:validate="required"></t:TextField>
				<div class="add-button">
					<button type="submit" class="btn btn-success waves-effect waves-light">
						<span class="btn-label">
							<i class="glyphicon glyphicon-plus"></i>
						</span>
						${message:save}
					</button>
					<!-- </button> -->
				</div>
			</t:Form>
			<t:zone t:id="listZone" id="listZone">
				<table t:type="grid" t:id="grid"
					class="table table-striped table-bordered dataTable no-footer table-actions-bar"
					t:source="list" t:row="row" t:exclude="uuid, createddate" t:reorder="number, name, createddateformated, modifieddateformated, delete"
					t:add="number, delete">
					<p:numberCell>${number}</p:numberCell>
					<p:DeleteCell>
						<t:ActionLink class="table-action-btn" t:id="deleteObject"
							t:context="row" t:mixins="ConfirmDelete">
							<i class="md md-close" />
						</t:ActionLink>
					</p:DeleteCell>
				</table>
			</t:zone>
		</div>
	</div>
</html>
