<html t:type="layoutLavlah" title=""
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<div class="col-md-9">
		<div class="filter-button">
			<button type="button"
				class="btn btn-primary waves-effect waves-light show_hide">
				<span class="btn-label">
					<i class="fa fa-search"></i>
				</span>
				${message:filter}
			</button>
		</div>
		<div class="clearfix"></div>
		<t:form t:id="search" class="form clear">
			<div class="slidingDiv row main-contents">
				<div class="col-md-12">
					<div class="card-box">

						<div class="col-md-4">
							<div class="form-group">
								<label>${message:lavlahpropertytype}</label>
								<t:TextField class="form-control" t:id="name"
									t:value="gname" />
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label>${message:startDate-label}</label>
								<div class="input-group">
									<input t:type="datefield" t:class="form-control"
										t:placeholder="mm/dd/yyyy" t:id="datepicker" t:value="d1">
										<span
											class="input-group-addon bg-custom 
											b-0 text-white">
											<i class="icon-calender"></i>
										</span>
									</input>

								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>${message:endDate-label}</label>
								<div class="input-group">
									<input t:type="datefield" t:class="form-control"
										t:placeholder="mm/dd/yyyy" t:id="datepicker1" t:value="d2">
										<span
											class="input-group-addon bg-custom 
											b-0 text-white">
											<i class="icon-calender"></i>
										</span>
									</input>
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>${message:isActive-label}</label>
								<input t:id="isActive" t:type="checkbox" t:value="active" />
							</div>
						</div>
						<div class="col-md-12 text-right">
							<a t:type="eventlink" t:event="cancel"
								class="btn btn-padding 
										btn-grey waves-effect waves-light">${message:clear}</a>
							<button type="submit"
								class="btn btn-padding btn-success waves-effect waves-light">${message:seeFilter}</button>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
		</t:form>
	</div>

	<div class="col-md-9">
		<div class="card-box">
			<h4 class="text-dark header-title m-t-0">${message:lavlahpropertytype}</h4>

			<t:Form t:id="save">
				<t:alerts />
				<div class="col-md-6">
					<div class="form-group">
						<label>
							${message:name-label}
							<span class="req">*</span>
						</label>
						<t:TextField t:value="name" t:id="propertyType" class="form-control"
							t:validate="maxlength=255,required"></t:TextField>
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label>
							${message:lavlahpropertytypeenum}
							<span class="req">*</span>
						</label>
						<input t:type="select" class="form-control" t:id="propertyTypeEnum"
							t:model="propertyTypeModel" t:value="propertyTypeEnum"
							t:validate="required" t:blankOption="always" />
					</div>
				</div>
				<div class="col-md-3">
					<div class="filter-button">
						<button type="submit" class="btn btn-success waves-effect waves-light"
							style="margin-top:25px;">
							<span class="btn-label">
								<i class="glyphicon glyphicon-plus"></i>
							</span>
							${message:save}
						</button>
					</div>
				</div>

				<div class="clearfix"></div>

			</t:Form>
			<t:zone t:id="listZone" id="listZone">
				<table t:type="grid" t:id="grid"
					class="table table-striped table-bordered dataTable no-footer table-actions-bar"
					t:source="typeList" t:row="typeRow" t:exclude="uuid, createddate"
					t:reorder="number, name, propertyTypeEnum, createddateformated, modifieddateformated, active, delete"
					t:add="number, delete, active">
					<p:numberCell>${number}</p:numberCell>
					<p:activeCell>
						<t:actionlink t:id="enable" t:context="typeRow"
							t:zone="listZone" class="greenNum
								confirmIsActive">
							<t:if test="typeRow.isActive">
								<div class="num">
									${message:active-label}
								</div>
								<p:else>
									<div class="num">
										${message:passive-label}
									</div>
								</p:else>
							</t:if>
						</t:actionlink>
					</p:activeCell>
					<p:DeleteCell>
						<t:ActionLink class="table-action-btn" t:id="deleteObject"
							t:context="typeRow" t:mixins="ConfirmDelete" t:message="${message:confirmDelete}">
							<i class="md md-close" />
						</t:ActionLink>
					</p:DeleteCell>
				</table>
			</t:zone>
		</div>
	</div>
</html>
