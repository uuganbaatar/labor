<html t:type="Layout" t:title="${message:employee}" t:id="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
<div class="row main-contents">
	<div class="col-sm-12">
		<div class="filter-button">
			<button type="button"
				class="btn btn-primary waves-effect waves-light show_hide">
				<span class="btn-label"><i class="fa fa-search"></i></span>${message:filter}
			</button>
		</div>
		<div class="clearfix"></div>

		<div class="slidingDiv row main-contents">
			<div class="col-md-12">
				<div class="card-box">
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:jobType}</label> <input type="text"
								class="form-control" placeholder="${message:jobType}" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:job}</label> <input type="text"
								class="form-control" placeholder="${message:job}" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:company}</label> <input type="text"
								class="form-control" placeholder="${message:company}" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:phone}</label> <input type="text"
								class="form-control" placeholder="${message:phone}" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:regDate}</label> <input type="text"
								class="form-control" placeholder="${message:regDate}" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:fullName}</label> <input type="text"
								class="form-control" placeholder="${message:fullName}" />
						</div>
					</div>
					<div class="col-md-12 text-center">
						<button type="button"
							class="btn btn-padding btn-grey waves-effect waves-light">${message:clear}</button>
						<button type="button"
							class="btn btn-padding btn-success waves-effect waves-light">${message:seeFilter}</button>
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">

			<h4 class="text-dark header-title m-t-0">${message:empList}</h4>

			<div class="add-button">
				<t:pagelink t:page="emp/EmpAddPage"
					class="btn btn-success waves-effect waves-light" href="#">
					<span class="btn-label"><i class="ti-user"></i></span>${message:empAdd}
        		</t:pagelink>
			</div>

			<div class="row">
				<div class="col-sm-12">
					<table id="datatable"
						class="table table-striped table-bordered dataTable no-footer table-actions-bar">
						<thead>
							<tr role="row">
								<th class="sorting_asc">${message:fullName}</th>
								<th class="sorting">${message:jobType}</th>
								<th class="sorting">${message:job}</th>
								<th class="sorting">${message:company}</th>
								<th class="sorting">${message:phone}</th>
								<th class="sorting">${message:regDate}</th>
								<th>${message:edit}</th>
							</tr>
						</thead>

						<tbody>
							<tr role="row" class="odd">
								<td class="sorting_1"><a href="add_worker.html">Munkherdene</a></td>
								<td>Mergejilten</td>
								<td>System Shinjeech</td>
								<td>Od Innovation LLC</td>
								<td>9911-1199</td>
								<td>2016-07-11</td>
								<td class="text-center"><a href="#"
									class="table-action-btn"><i class="md md-edit"></i></a> <a
									href="#" class="table-action-btn"><i class="md md-close"></i></a>
								</td>
							</tr>
						</tbody>
					</table>

					<div class="col-md-12 text-right">

						<ul class="pagination">
							<li class="paginate_button previous"><a href="#">${message:prev}</a></li>
							<li class="paginate_button active"><a href="#">1</a></li>
							<li class="paginate_button"><a href="#">2</a></li>
							<li class="paginate_button"><a href="#">3</a></li>
							<li class="paginate_button"><a href="#">4</a></li>
							<li class="paginate_button"><a href="#">5</a></li>
							<li class="paginate_button"><a href="#">6</a></li>
							<li class="paginate_button next"><a href="#">${message:next}</a></li>
						</ul>
					</div>
				</div>
			</div>

			<div class="clearfix"></div>
		</div>
	</div>
</div>
</html>