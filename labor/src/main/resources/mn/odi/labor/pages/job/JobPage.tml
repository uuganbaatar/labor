<html t:type="Layout" t:title="${message:job}" t:id="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">

			<h4 class="text-dark header-title m-t-0">${message:jobAddTitle}</h4>

			<div class="col-md-4 padding_only_top">
				<div class="form-group">
					<label>${message:mainType}</label> <select class="form-control">
						<option>${message:select}</option>
					</select>
				</div>
			</div>
			<div class="col-md-4 padding_only_top">
				<div class="form-group">
					<label>${message:jobName}</label> <input type="text"
						class="form-control" placeholder="${message:jobName}"/>
				</div>
			</div>
			<div class="col-md-4 padding_only_top">
				<div class="form-group">
					<div class="checkbox checkbox-primary checkbox-padding">
						<input id="checkbox1" type="checkbox"/><label
							for="checkbox1">${message:isJobNew}</label>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
			<div class="col-md-4">
				<div class="form-group">
					<label>${message:date}</label>
					<div class="input-group">
						<input type="text" class="form-control" placeholder="mm/dd/yyyy"
							id="datepicker"/><span
							class="input-group-addon bg-custom b-0 text-white"><i
							class="icon-calender"></i></span>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<label>${message:source}</label> <select class="form-control">
						<option>${message:select}</option>
					</select>
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<label>${message:jobType}</label> <select class="form-control">
						<option>${message:select}</option>
					</select>
				</div>
			</div>

			<div class="col-md-12 text-center">
				<button type="button"
					class="btn btn-padding btn-grey waves-effect waves-light">${message:clear}</button>
				<button type="button"
					class="btn btn-padding btn-success waves-effect waves-light">${message:save}</button>
			</div>

			<div class="clearfix"></div>
		</div>
	</div>
</div>

<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">

			<h4 class="text-dark header-title m-t-0">${message:jobListTitle}</h4>

			<div class="row">
				<div class="col-sm-12">
					<table id="datatable"
						class="table table-striped table-bordered dataTable no-footer table-actions-bar">
						<thead>
							<tr role="row">
								<th class="sorting_asc">${message:mainType}</th>
								<th class="sorting">${message:jobName}</th>
								<th class="sorting">${message:date}</th>
								<th class="sorting">${message:source}</th>
								<th class="sorting">${message:jobType}</th>
								<th>${message:edit}</th>
							</tr>
						</thead>

						<tbody>
							<tr role="row" class="odd">
								<td class="sorting_1">Mergejilten</td>
								<td class="">System shinjeech</td>
								<td>2016-07-11</td>
								<td>Gadaadiin hurungu oruulalt</td>
								<td>Baingiin</td>
								<td class="text-center"><a href="#"
									class="table-action-btn"><i class="md md-edit"></i></a> <a
									href="#" class="table-action-btn"><i class="md md-close"></i></a>
								</td>
							</tr>
						</tbody>
					</table>

					<div class="col-md-12 text-right">

						<ul class="pagination">
							<li class="paginate_button previous"><a href="#">${message:prev}</a></li>
							<li class="paginate_button active"><a href="#">1</a></li>
							<li class="paginate_button"><a href="#">2</a></li>
							<li class="paginate_button"><a href="#">3</a></li>
							<li class="paginate_button"><a href="#">4</a></li>
							<li class="paginate_button"><a href="#">5</a></li>
							<li class="paginate_button"><a href="#">6</a></li>
							<li class="paginate_button next"><a href="#">${message:next}</a></li>
						</ul>

					</div>

				</div>
			</div>

			<div class="clearfix"></div>
		</div>
	</div>
</div>

</html>