<html t:type="Layout" t:title="${message:job}" t:id="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">
			<h4 class="text-dark header-title m-t-0">${message:jobAddTitle}</h4>
			<t:zone t:id="jobFormZone">
				<form t:id="jobAddForm" t:type="form" >
					<div class="col-md-4 padding_only_top">
						<div class="form-group">
							<label>${message:generalType-label}<span class="req">*</span></label> 
							<input
								t:type="select" class="form-control" t:id="generalType"
								t:model="generalTypeModel" t:value="job.generalType" t:validate="required"
								t:blankOption="always" />
						</div>
					</div>
					<div class="col-md-4 padding_only_top">
						<div class="form-group">
							<label>${message:jobName-label}<span class="req">*</span></label> 
							<input t:type="textfield"
								class="form-control" t:id="name" t:value="job.jobName" t:validate="required"/>
						</div>
					</div>
					<div class="col-md-4 padding_only_top">
						<div class="form-group">
							<div class="checkbox checkbox-primary checkbox-padding">
								<input id="checkbox1" type="checkbox" t:value="newCheck"/>
								<label for="checkbox1">${message:isJobNew-label}<span class="req">*</span></label>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:date}<span class="req">*</span></label>
							<div class="input-group">
							<input t:type="datefield" t:id="jobDate" t:value="job.jobDate"
									t:class="form-control" id="datepicker" t:validate="required" /> 
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:fundingSource-label}<span class="req">*</span></label> <input
								t:type="select" class="form-control" t:id="fundingSource"
								t:model="fundingSourceModel" t:value="job.fundingSource" t:validate="required"
								t:blankOption="always" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:jobType-label}<span class="req">*</span></label> <input
								t:type="select" class="form-control" t:id="jobType"
								t:model="jobTypeModel" t:value="job.jobtype" t:validate="required"
								t:blankOption="always" />
						</div>
					</div>

					<div class="col-md-12 text-center">
						<t:actionlink t:id="jobCancel" zone="jobFormZone"
							class="btn btn-padding btn-grey waves-effect waves-light">
									${message:clear}
								</t:actionlink>
						<t:Submit class="btn btn-padding btn-success"
							value="${message:save}" />
					</div>
				</form>
			</t:zone>

			<div class="clearfix"></div>
		</div>
	</div>
</div>

<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">
		
			<div class="title">
				<h4 class="text-dark header-title m-t-0" style="float:left">${message:jobListTitle}</h4>
				<div class="dataTables_total">
					<label>${message:total-label}</label>
					<strong> ${count}</strong>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12">

					<t:zone t:id="jobGridZone">
						<table t:type="grid" t:id="grid"
							class="table table-striped table-bordered dataTable no-footer table-actions-bar"
							t:source="jobList" t:row="jobRow"
							t:add="number, generalType, fundingSource, edit"
							t:exclude="uuid, jobDate, isNew, createddate"
							t:reorder="number, generalType, jobName, jobDateFormated, fundingSource, jobType">
							<p:numberCell>${number}</p:numberCell>
							<p:GeneralTypeCell>
								${jobRow?.generalType?.name}
							</p:GeneralTypeCell>
							<p:FundingSourceCell>
								${jobRow?.fundingSource?.name}
							</p:FundingSourceCell>
							<p:EditCell>
								<t:actionlink t:id="jobEdit" zone="jobFormZone"
									t:context="jobRow" class="table-action-btn ">
									<i class="md md-edit"></i>
								</t:actionlink>
								<t:actionlink t:id="jobDelete" t:context="jobRow"
									class="table-action-btn"
									t:mixins="ConfirmDelete"
									t:message="${message:confirmDelete}" >
									<i class="md md-close"></i>
								</t:actionlink>
							</p:EditCell>
						</table>
					</t:zone>
				</div>
			</div>

			<div class="clearfix"></div>
		</div>
	</div>
</div>

</html>