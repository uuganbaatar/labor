<html t:type="Layout" t:title="${message:job}" t:id="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">
			<h4 class="text-dark header-title m-t-0">${message:jobAddTitle}</h4>
			<t:zone t:id="jobFormZone" id="jobFormZone">
				<form t:id="ajaxForm" t:type="form" t:zone="^">
					<div class="col-md-4 padding_only_top">
						<div class="form-group">
							<label>${message:generalType-label}</label> <input
								t:type="select" class="form-control" t:id="generalType"
								t:model="generalTypeModel" t:value="job.generalType"
								t:blankOption="always" />
						</div>
					</div>
					<div class="col-md-4 padding_only_top">
						<div class="form-group">
							<label>${message:jobName-label}</label> <input t:type="textfield"
								class="form-control" t:id="name" t:value="job.jobName" />
						</div>
					</div>
					<div class="col-md-4 padding_only_top">
						<div class="form-group">
							<div class="checkbox checkbox-primary checkbox-padding">
								<input id="checkbox1" type="checkbox" /><label for="checkbox1">${message:isJobNew-label}</label>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:date}</label>
							<div class="input-group">
								<input type="text" class="form-control" placeholder="mm/dd/yyyy"
									id="datepicker" /><span
									class="input-group-addon bg-custom b-0 text-white"><i
									class="icon-calender"></i></span>
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:fundingSource-label}</label> <input
								t:type="select" class="form-control" t:id="fundingSource"
								t:model="fundingSourceModel" t:value="job.fundingSource"
								t:blankOption="always" />
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label>${message:jobType-label}</label> <select
								class="form-control">
								<option>${message:select}</option>
							</select>
						</div>
					</div>

					<div class="col-md-12 text-center">
						<t:actionlink t:id="jobCancel" zone="jobFormZone"
							class="btn btn-padding btn-grey waves-effect waves-light">
									${message:clear}
								</t:actionlink>
						<t:Submit class="btn btn-padding btn-success"
							value="${message:save}" />
					</div>
				</form>
			</t:zone>

			<div class="clearfix"></div>
		</div>
	</div>
</div>

<div class="row main-contents">
	<div class="col-md-12">
		<div class="card-box">

			<h4 class="text-dark header-title m-t-0">${message:jobListTitle}</h4>

			<div class="row">
				<div class="col-sm-12">

					<t:zone t:id="jobGridZone" id="jobGridZone">
						<t:Grid
							class="table table-striped table-bordered dataTable no-footer table-actions-bar"
							t:source="jobList" t:row="jobRow"
							t:add="generalType, fundingSource, edit"
							t:exclude="uuid, jobDate, isNew, createddate"
							t:reorder="generalType, jobName, dateFormated, fundingSource, jobType">
							<p:GeneralTypeCell>
								${jobRow?.generalType?.name}
							</p:GeneralTypeCell>
							<p:FundingSourceCell>
								${jobRow?.fundingSource?.name}
							</p:FundingSourceCell>
							<p:EditCell>
								<t:actionlink t:id="jobEdit" zone="jobFormZone"
									t:context="jobRow" class="table-action-btn ">
									<i class="md md-edit"></i>
								</t:actionlink>
								<t:actionlink t:id="jobDelete" t:context="jobRow"
									class="table-action-btn ">
									<i class="md md-close"></i>
								</t:actionlink>
							</p:EditCell>
						</t:Grid>
					</t:zone>
				</div>
			</div>

			<div class="clearfix"></div>
		</div>
	</div>
</div>

</html>